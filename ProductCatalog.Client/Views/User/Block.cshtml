@model ProductCatalog.Client.Models.UserModel

<h2>Block User</h2>

<p>Are you sure you want to block this user?</p>
<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>User Name</th>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
</table>

<form asp-controller="User" asp-action="BlockConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Block</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    @Html.AntiForgeryToken()
</form>
