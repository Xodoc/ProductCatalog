@model ProductCatalog.Client.Models.ProductModel

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>
<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>@Model.CategoryName</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Cost (Rubles)</th>
        <td>@Model.CostInRubles</td>
    </tr>
</table>

<form asp-controller="Product" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    @Html.AntiForgeryToken()
</form>